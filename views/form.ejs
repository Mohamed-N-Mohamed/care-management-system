<!-- form handling -->
<div class="container">
  <form method="POST" id="add_user" action="/api/clients">
    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Name" name="name">
      </div>
      <div class="form-group col-md-4">
        <label for="last">Last Name</label>
        <input type="text" class="form-control" id="last" placeholder="Last Name" name="last">
      </div>
      <div class="form-group col-md-4">
        <label for="Age">Age</label>
        <input type="text" class="form-control" id="age" placeholder="Age" name="age">
      </div>
    </div>
    <div class="form-group">
      <label for="inputAddress">Address</label>
      <input type="text" class="form-control" id="inputAddress" name="address">
    </div>
    <div class="form-group">
      <label for="medication">Medication</label>
      <input type="text" class="form-control" id="medication" placeholder="" name="medication">
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <label for="carer">Carer Name</label>
        <input type="text" class="form-control" id="name" placeholder="Carer Name" name="carer">
      </div>
    </div>


    <button type="submit" class="btn btn-dark btn-block text-light">Submit</button>
  </form>
</div>